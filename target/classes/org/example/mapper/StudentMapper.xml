<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.StudentMapper">
    <!--    <select id="selectAll" resultType="org.example.pojo.Student">-->
    <!--        select * from student;-->
    <!--    </select>-->

    <select id="selectById" resultType="org.example.pojo.Student">
        select * from student where id = #{id};
    </select>

    <!--动态条件查询-->
    <select id="selectByCondition" resultType="org.example.pojo.Student">
        select * from student
        <where>
            <if test="name!=null and name!=''">
                name like #{name}
            </if>
            <if test="sex!=null and sex!=''">
                sex = #{sex}
            </if>
        </where>
    </select>

    <select id="selectByConditionSingle" resultType="org.example.pojo.Student">
        select * from student
        <where>
            <choose>
                <when test="name!=null and name!=''">
                    name like #{name}
                </when>
                <when test="sex!=null and sex!=''">
                    sex = #{sex}
                </when>
            </choose>
        </where>
    </select>

    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        insert into student(name,sex,age) values(#{name},#{sex},#{age})
    </insert>

    <update id="update">
        update student set name=#{name},sex=#{sex},age=#{age} where id=#{id}
    </update>

    <delete id="deleteById">
        delete from student where id=#{id}
    </delete>

    <delete id="deleteByIds">
        delete from student where id
        in (
        <foreach collection="ids" item="id" separator=",">
            #{id}
        </foreach>
        );
    </delete>
</mapper>